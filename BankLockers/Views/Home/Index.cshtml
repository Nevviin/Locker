<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Style/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/AngularControllers/Grid.js"></script>
    <title>Index</title>
</head>
<body>
    <div ng-app="gridApp" ng-controller="gridController" class="container">
        
        <table style="margin-top: 50px;" class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Location</th>
                    <th scope="col">BankName</th>
                    <th scope="col">NoOfLockers</th>
                </tr>
            </thead>
            <tbody>


                <tr ng-repeat="locker in lockerList">
                    <th scope="row">{{$index+1}}</th>
                    <td>{{locker.Location}}</td>
                    <td>{{locker.BankName}}</td>
                    <td>{{locker.NoOfLockers}}</td>
                </tr>

            </tbody>
        </table>
    </div>
</body>
</html>
